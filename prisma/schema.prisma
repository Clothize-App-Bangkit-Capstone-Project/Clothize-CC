// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id     String       @id @default(uuid())
  username    String       @unique @db.VarChar(100)
  password    String       @db.VarChar(100)
  email       String       @unique @db.VarChar(150)
  isVerified  Boolean      @default(false)
  role        String       @default("customer") @db.VarChar(20)
  Customer    Customer?
  Tailor      Tailor?
  Measurement Measurement?

  @@map("users")
}

model Customer {
  customer_id     String  @id @default(uuid())
  full_name       String? @db.VarChar(100)
  address         String? @db.VarChar(255)
  phone_number    String? @db.VarChar(20)
  profile_picture String? @default("https://storage.googleapis.com/clothize-app/default-profile-pict.png") @db.VarChar(255)
  user            User    @relation(fields: [user_id], references: [user_id])
  user_id         String  @unique

  @@map("customers")
}

model Tailor {
  tailor_id       String  @id @default(uuid())
  name            String  @db.VarChar(100)
  address         String? @db.VarChar(255)
  description     String? @db.VarChar(255)
  profile_picture String? @db.VarChar(255)
  user            User    @relation(fields: [user_id], references: [user_id])
  user_id         String  @unique

  @@map("tailors")
}

model Measurement {
  measurement_id      String @id @default(uuid())
  clothing_size       String @db.VarChar(6)
  picture             String @db.VarChar(255)
  body_circumstances  Int
  shoulder_width      Int
  body_length         Int
  chest_circumstances Int
  gender              String @db.VarChar(100)
  height              Int
  weight              Int
  user                User   @relation(fields: [user_id], references: [user_id])
  user_id             String @unique

  @@map("measurements")
}
